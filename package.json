{
  "name": "codes-command-tool",
  "version": "1.0.0",
  "description": "A powerful Node.js command execution tool that supports executing commands in specified directories",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:rollup && pnpm run build:types",
    "build:rollup": "rollup -c",
    "build:types": "tsup src/index.ts --dts-only --format esm",
    "dev": "rollup -c --watch",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs": "typedoc",
    "docs:serve": "typedoc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "command",
    "execution",
    "spawn",
    "process",
    "directory",
    "shell",
    "cli",
    "tool"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "jest": "^30.0.4",
    "oxlint": "^1.6.0",
    "prettier": "^3.4.3",
    "rollup": "^4.44.2",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "diff": "^8.0.2"
  }
}
