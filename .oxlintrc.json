{
  "plugins": ["typescript", "unicorn", "oxc"],
  "rules": {
    "typescript/no-duplicate-enum-values": "error",
    "typescript/no-extra-non-null-assertion": "error",
    "typescript/no-misused-new": "error",
    "typescript/no-non-null-asserted-optional-chain": "error",
    "typescript/no-this-alias": "error",
    "typescript/no-unsafe-declaration-merging": "error",
    "typescript/no-useless-empty-export": "error",
    "typescript/no-wrapper-object-types": "error",
    "typescript/prefer-as-const": "error",
    "typescript/triple-slash-reference": "error",
    "typescript/array-type": "warn",
    "typescript/ban-tslint-comment": "warn",
    "typescript/consistent-indexed-object-style": "warn",
    "typescript/consistent-type-definitions": "warn",
    "typescript/consistent-type-imports": "warn",
    "typescript/no-empty-interface": "warn",
    "typescript/prefer-function-type": "warn",
    "typescript/prefer-namespace-keyword": "warn",
    "typescript/no-explicit-any": "warn",
    "typescript/no-namespace": "warn",
    "typescript/no-non-null-assertion": "warn",
    "typescript/no-var-requires": "error",
    "typescript/prefer-literal-enum-member": "warn",
    "no-unused-vars": "error",
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "no-implicit-coercion": "error",
    "no-duplicate-imports": "error",
    "prefer-array-find": "warn",
    "prefer-set-has": "warn",
    "array-callback-return": "error",
    "no-array-constructor": "error",
    "no-constructor-return": "error",
    "no-else-return": "warn",
    "no-lonely-if": "warn",
    "no-useless-constructor": "error",
    "prefer-object-spread": "warn",
    "prefer-rest-params": "warn",
    "prefer-spread": "warn"
  },
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "*.config.js",
    "*.config.ts",
    "*.d.ts"
  ],
  "env": {
    "es2022": true,
    "node": true
  }
}
